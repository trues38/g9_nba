<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold">New YouTube Insight</h1>
  <%= link_to "← Back", admin_roe2_index_path, class: "text-gray-400 hover:text-white text-sm" %>
</div>

<div class="bg-gray-800 rounded-xl border border-gray-700 p-6">
  <%= form_tag extract_admin_roe2_index_path, method: :post, class: "space-y-4" do %>
    <div>
      <label class="block text-sm font-medium text-gray-300 mb-2">YouTube URL</label>
      <input
        type="url"
        name="url"
        placeholder="https://www.youtube.com/watch?v=..."
        required
        class="w-full px-4 py-3 bg-gray-900 border border-gray-600 rounded-lg focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 text-white placeholder-gray-500"
      >
      <p class="mt-1 text-xs text-gray-500">YouTube 또는 youtu.be 링크 지원</p>
    </div>

    <div class="pt-4">
      <button type="submit" class="w-full px-4 py-3 bg-indigo-600 hover:bg-indigo-700 rounded-lg font-medium transition">
        Extract Content →
      </button>
    </div>
  <% end %>
</div>

<!-- 지원 콘텐츠 타입 -->
<div class="mt-6 p-4 bg-gray-800/50 rounded-xl border border-gray-700">
  <h3 class="font-medium mb-3">Supported Insight Types</h3>

  <div class="grid grid-cols-2 gap-4 text-sm">
    <div>
      <h4 class="text-indigo-400 font-medium mb-1">NarrativeContext (서사)</h4>
      <ul class="text-gray-400 space-y-1">
        <li>• Star Absence Impact</li>
        <li>• Player Emergence</li>
        <li>• Star Leadership</li>
        <li>• Schedule Context</li>
        <li>• Revenge Game</li>
        <li>• Milestone</li>
      </ul>
    </div>
    <div>
      <h4 class="text-purple-400 font-medium mb-1">TacticalConcept (전술)</h4>
      <ul class="text-gray-400 space-y-1">
        <li>• OFFENSE (Spain PnR, DHO, 5-out)</li>
        <li>• DEFENSE (Drop, Switch All)</li>
        <li>• TRANSITION (Early Offense)</li>
        <li>• ROSTER_MANAGEMENT</li>
        <li>• SPECIAL (Clutch, SLOB)</li>
      </ul>
    </div>
  </div>
</div>
