<div class="px-4 py-4">
  <!-- Back Button -->
  <%= link_to reports_path(sport: current_sport&.slug), class: "inline-flex items-center text-gray-400 hover:text-white light:hover:text-gray-900 mb-4" do %>
    <iconify-icon icon="solar:arrow-left-linear" width="20" class="mr-1"></iconify-icon>
    <%= t('reports.back') %>
  <% end %>

  <!-- Report Header -->
  <div class="bg-gray-900 light:bg-white rounded-xl p-4 border border-gray-800 light:border-gray-200 light:shadow-sm mb-4">
    <div class="flex justify-between items-start mb-3">
      <div>
        <div class="text-2xl font-bold light:text-gray-900"><%= @report.game&.display_name %></div>
        <div class="text-sm text-gray-500 mt-1"><%= @report.game&.game_date&.strftime("%Y-%m-%d %H:%M") %> KST</div>
      </div>
      <div class="text-right">
        <div class="text-xl font-bold text-indigo-500"><%= @report.confidence_stars %></div>
      </div>
    </div>

    <% if @report.pick.present? %>
      <div class="bg-indigo-600/20 light:bg-indigo-50 border border-indigo-500/30 light:border-indigo-200 rounded-lg p-3 mt-3">
        <div class="text-xs text-indigo-400 light:text-indigo-600 mb-1"><%= t('reports.pick').upcase %></div>
        <div class="text-lg font-bold light:text-gray-900"><%= @report.pick %></div>
      </div>
    <% end %>
  </div>

  <!-- Report Content -->
  <div class="bg-gray-900 light:bg-white rounded-xl p-4 border border-gray-800 light:border-gray-200 light:shadow-sm">
    <div class="prose prose-invert light:prose prose-sm max-w-none light:text-gray-700">
      <%= simple_format(@report.content) %>
    </div>
  </div>

  <!-- Footer -->
  <div class="mt-4 text-center text-xs text-gray-600 light:text-gray-400">
    <%= t('reports.published') %> <%= @report.published_at&.strftime("%Y-%m-%d %H:%M") %> KST
  </div>
</div>
