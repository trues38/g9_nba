<div class="px-4 py-4">
  <h1 class="text-xl font-bold mb-6 light:text-gray-900"><%= t('profile.title') %></h1>

  <!-- User Info Placeholder -->
  <div class="bg-gray-900 light:bg-white rounded-xl p-6 border border-gray-800 light:border-gray-200 light:shadow-sm mb-4">
    <div class="flex items-center gap-4">
      <div class="w-16 h-16 bg-gray-800 light:bg-gray-100 rounded-full flex items-center justify-center">
        <iconify-icon icon="solar:user-circle-linear" width="32" class="text-gray-600 light:text-gray-400"></iconify-icon>
      </div>
      <div>
        <div class="text-lg font-semibold light:text-gray-900"><%= t('profile.guest_user') %></div>
        <div class="text-sm text-gray-500"><%= t('profile.sign_in_prompt') %></div>
      </div>
    </div>
  </div>

  <!-- Menu Items -->
  <div class="bg-gray-900 light:bg-white rounded-xl border border-gray-800 light:border-gray-200 light:shadow-sm divide-y divide-gray-800 light:divide-gray-200">
    <a href="#" class="flex items-center justify-between p-4 hover:bg-gray-800/50 light:hover:bg-gray-50 transition">
      <div class="flex items-center gap-3">
        <iconify-icon icon="solar:bell-linear" width="20" class="text-gray-500 light:text-gray-400"></iconify-icon>
        <span class="light:text-gray-900"><%= t('profile.notifications') %></span>
      </div>
      <iconify-icon icon="solar:arrow-right-linear" width="20" class="text-gray-600 light:text-gray-400"></iconify-icon>
    </a>

    <a href="#" class="flex items-center justify-between p-4 hover:bg-gray-800/50 light:hover:bg-gray-50 transition">
      <div class="flex items-center gap-3">
        <iconify-icon icon="solar:card-linear" width="20" class="text-gray-500 light:text-gray-400"></iconify-icon>
        <span class="light:text-gray-900"><%= t('profile.subscription') %></span>
      </div>
      <iconify-icon icon="solar:arrow-right-linear" width="20" class="text-gray-600 light:text-gray-400"></iconify-icon>
    </a>

    <a href="#" class="flex items-center justify-between p-4 hover:bg-gray-800/50 light:hover:bg-gray-50 transition">
      <div class="flex items-center gap-3">
        <iconify-icon icon="solar:settings-linear" width="20" class="text-gray-500 light:text-gray-400"></iconify-icon>
        <span class="light:text-gray-900"><%= t('profile.settings') %></span>
      </div>
      <iconify-icon icon="solar:arrow-right-linear" width="20" class="text-gray-600 light:text-gray-400"></iconify-icon>
    </a>

    <a href="#" class="flex items-center justify-between p-4 hover:bg-gray-800/50 light:hover:bg-gray-50 transition">
      <div class="flex items-center gap-3">
        <iconify-icon icon="solar:question-circle-linear" width="20" class="text-gray-500 light:text-gray-400"></iconify-icon>
        <span class="light:text-gray-900"><%= t('profile.help') %></span>
      </div>
      <iconify-icon icon="solar:arrow-right-linear" width="20" class="text-gray-600 light:text-gray-400"></iconify-icon>
    </a>
  </div>

  <!-- App Version -->
  <div class="mt-6 text-center text-xs text-gray-600 light:text-gray-400">
    GATE9 SPORTS v1.0.0
  </div>
</div>
